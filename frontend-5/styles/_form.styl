form
  display flex
  flex-direction column
  max-width 370px
  width 100%

  button[type='submit']
    background-image linear-gradient(30deg, #f35241, #ffe512)
    background-position-x 0%
    background-size 160% auto
    border none
    border-radius 15px
    color black
    cursor pointer
    display block
    font-size 24px
    margin-top 1em
    padding 10px 20px
    width 100%

  input
    border 2px solid grey
    border-radius 15px
    box-shadow none
    display block
    font-size 18px
    padding 10px 20px
    outline none
    transition border-color .3s cubic-bezier(0.445, 0.05, 0.55, 0.95)
    width 100%

  label
    font-size 20px
    position relative
    padding-bottom 1.4em
    width 100%

    + label
      margin-top 1em

  .error
    color red
    opacity 0
    position absolute
    transition opacity .3s linear

  &.validate
    .error
      opacity 1

    input.invalid
      border-color red
