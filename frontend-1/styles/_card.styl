$border-radius = 10px

.card
  border 2px solid black
  border-radius $border-radius
  min-width 300px
  padding 20px
  position relative

  .list
    align-items center
    display flex
    flex-direction column
    flex-basis calc(50% - 10px)
    div
      text-decoration underline
    li
      padding-left 8px
      position relative
      &::before
        background-color grey
        border-radius 50%
        content ''
        height 3px
        position absolute
        left 0
        top 10px
        width 3px
      + li
        margin-top 6px
    ul
      list-style none
      margin 10px 0 0
      padding-left 0

  .lists
    display flex
    margin 25px 0

  .subtitle
    font-size 20px
    margin 15px 0
    text-align center

  .tag
    background-color black
    border-bottom-left-radius: $border-radius
    border-top-right-radius: ($border-radius - 2px)
    color white
    padding 5px 10px 7px
    position absolute
    right 0
    top 0

  .title
    font-size 25px
    margin 20px 0 15px
    text-align center
    text-transform uppercase
